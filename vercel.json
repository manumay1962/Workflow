{
    "version": 2,
    "builds": [
        {
            "src": "backend/server.ts",
            "use": "@vercel/node",
            "config": { 
                "includeFiles": [
                    "backend/package.json", 
                    "backend/controllers/**", 
                    "backend/prisma/**", 
                    "backend/.env"
                ] 
            }
        },
        {
            "src": "frontend/index.html",
            "use": "@vercel/static-build",
            "config": { "distDir": "frontend/dist" }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/server.ts"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/index.html"
        }
    ]
}